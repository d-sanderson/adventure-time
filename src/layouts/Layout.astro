---
import "@fontsource-variable/advent-pro";
interface Props {
  title: string;
}
import "@fontsource-variable/advent-pro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Adventure time is a choose your own text-based adventure simulator that leverages Gemini Generative AI to craft a compelling custom adventure in the world of your choosing!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="page-container">
      <div id="content-wrap">
        <slot />
      </div>
      <footer>
        Made by
        <a target="_blank" href="https://www.davidsanderson.dev/">
          David Sanderson
        </a>
      </footer>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    background: #13151a;
    background-size: 224px;
  }

  body {
    font-family: "Advent Pro Variable", sans-serif;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  #page-container {
    position: relative;
    min-height: 100vh;
  }

  #content-wrap {
    padding-bottom: 2.5rem; /* Footer height */
  }

  footer {
    position: absolute;
    color: white;
    text-align: center;
    bottom: 0;
    width: 100%;
    height: 2.5rem; /* Footer height */
  }
</style>
